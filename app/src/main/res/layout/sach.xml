<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/tieuDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Thêm sách mới"/>
        <EditText
            android:id="@+id/tenSach"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_height="48dp"
            android:hint="Nhập tên sách"/>
        <EditText
            android:id="@+id/tenTacGia"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_height="48dp"
            android:hint="Nhập tên tác giả"/>
        <EditText
            android:id="@+id/giaBan"
            android:layout_width="match_parent"
            android:inputType="number"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_height="48dp"
            android:hint="Nhập giá bán"/>
        <EditText
            android:id="@+id/tenLoai"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_height="48dp"
            android:hint="Nhập tên loại sách"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/btnLuu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:backgroundTint="#808080"
                android:textStyle="bold"
                android:text="Thêm"
                android:textAllCaps="true" />
            <Button
                android:id="@+id/btnHuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/red"
                android:textStyle="bold"
                android:text="Hủy"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>