<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/anhPhieuMuon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ticket" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã phiếu mượn: "
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/ngayMuon"
                android:layout_width="match_parent"
                android:layout_height="18sp"
                android:text="Ngày mượn"/>
            <TextView
                android:id="@+id/ngayTra"
                android:layout_width="match_parent"
                android:layout_height="18sp"
                android:text="Ngày trả"/>
            <TextView
                android:id="@+id/tenUser"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:text="Tên người mượn"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">
            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_edit_pen" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>